{
  "compilerOptions": {
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                    
    "module": "commonjs",                                
    "baseUrl": "./src",                                 
    "paths": {
        "@untils/*": ["untils/*"],
        "@modules/*": ["modules/*"],
        "@config/*": ["config/*"],
        "@shared/*": ["shared/*"],
        "@errors/*": ["errors/*"]
    },                                      
    "resolveJsonModule": true,                        
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "skipLibCheck": true                                 
  }
}
